<h1>Teste de Contents</h1>

<p><%= link_to 'New Content', new_content_path %>

<%= form_tag(contents_path, method: :get) do%>

    <div class='field'>
        <%= label_tag :tags %>
        <%= select_tag 'tags[]', options_for_select(current_user.tags.pluck(:name), params[:tags]), class: 'select2', multiple: 'multiple', style: 'width: 30%' %>
        <%= submit_tag('Search') %>
    </div>

<% end %>

<% @contents.each do |content| %>
<p>
    <%= link_to 'Show Content', content_path(content) %>
    <%= link_to 'Edit Content', edit_content_path(content) %>
    <%= link_to 'Delete Content', content_path(content), method: :delete, data: { confirm: 'Are you sure?'} %>
    <strong>Title:</strong> <%= content.title %>
    <strong>Description:</strong> <%= content.description %>
    <strong>Tags:</strong> <%= content.tags.pluck(:name).join(', ') %>
    
</p>
<% end %>